<%- include('includes/head') %>
    <%- include('includes/nav') %>
        <main>
            <div class="container">
                <div class="row">
                    <div class="col-lg-2"></div>

                    <div class="col-lg-8 my-3">
                        <h1 class="text-center">Edit Contact</h1>

                        <!-- error messages -->
                        <%- include('includes/messages');%>
                    
                        <form action="/contact/editContact/<%= contactSelected._id  %>" method="POST">
                        
                          <input type="hidden" id="token" name="_csrf" value="<%= csrfToken %>">
                            <div class="mb-3">
                              <label class="form-label">Name</label>
                              <input type="text" value="<%= contactSelected.name %>" class="form-control" aria-describedby="name" name="name" autocomplete="name">
                            </div>
                            <div class="mb-3">
                              <label class="form-label">Last Name</label>
                              <input type="text" value="<%= contactSelected.lastName %>" class="form-control"  name="lastName" autocomplete="lastName">
                            </div>
                            <div class="mb-3">
                              <label class="form-label">Phone</label>
                              <input type="text" value="<%= contactSelected.phone %>" class="form-control"  name="phone" autocomplete="phone">
                            </div>
                            <div class="mb-3">
                              <label class="form-label">Email</label>
                              <input type="email" value="<%= contactSelected.email %>" class="form-control"  name="email" autocomplete="email">
                            </div>
                            <button type="submit" class="btn btn-primary">Edit Contact</button>
                          </form>

                    </div>
                    <div class="col-lg-2"></div>
                </div>
            </div>
        </main>

        <%- include('includes/footer') %>