<%- include('includes/head') %>
    <%- include('includes/nav') %>
        <main>
            <div class="container">
                <div class="row">
                    <div class="col-lg-2"></div>

                    <div class="col-lg-8 my-3">
                        <h1 class="text-center">Register</h1>
                        <p class="text-center lead">
                        Join us!!
                        </p>

                        <!-- error messages -->
                        <%- include('includes/messages');%>
                       

                        <form action="/register/newUser" method="POST">
                          <input type="hidden" id="token" name="_csrf" value="<%= csrfToken %>">
                            <div class="mb-3">
                              <label class="form-label">Email address</label>
                              <input type="email" class="form-control" aria-describedby="emailHelp" name="email" autocomplete="email">
                              <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                            </div>
                            <div class="mb-3">
                              <label class="form-label">Password</label>
                              <input type="password" class="form-control"  name="password" autocomplete="new-password">
                            </div>
                            <div class="mb-3">
                              <label class="form-label">Confirm Password</label>
                              <input type="password" class="form-control"  name="passwordConfirm" autocomplete="new-password">
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                          </form>

                    </div>
                    <div class="col-lg-2"></div>
                </div>
            </div>
        </main>

        <%- include('includes/footer') %>