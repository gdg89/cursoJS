<%- include('includes/head') %>
<%- include('includes/nav') %>
<main>
    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>

            <div class="col-lg-8 my-3">
                <h1 class="text-center">Schedule</h1>
                <p class="text-center lead">Your contacts are below</p>

                <!-- error messages -->
                <%- include('includes/messages');%>
                <!--/end error messages -->

                <div class="add-btn_container">
                    <a href="/contact" class="btn btn-warning" role="button">Add contact</a>
                </div>

                <% if(contacts.length > 0) { %>
                <div class="responsive-table">
                    <table class="table my-3">
                        <thead class="bg-success">
                            <th class="text-light">Name</th>
                            <th class="text-light">Last Name</th>
                            <th class="text-light">Phone</th>
                            <th class="text-light">Email</th>
                            <th class="text-light">Action</th>
                        </thead>
                        <% contacts.forEach(contact =>{  %>
                            <tr>
                                <td><%= contact.name %></td>
                                <td><%= contact.lastName %></td>
                                <td><%= contact.phone %></td>
                                <td><%= contact.email  %></td>
                                <td>
                                    <a href="/contact/edit/<%= contact._id %>" class="btn btn-primary" role="button">edit</a>
                                    <a href="/contact/delete/<%= contact._id %>" class="btn btn-danger" role="button">delete</a>
                                </td>
                            </tr>
                        <% }); %>
                        
                    </table>
                </div>
                <% } else { %>
                    <p class="text-center lead">Nao existem contatos na sua agenda</p>
                <% }  %>
            </div>
        </div>
    </div>
</main>

<%- include('includes/footer')  %>

